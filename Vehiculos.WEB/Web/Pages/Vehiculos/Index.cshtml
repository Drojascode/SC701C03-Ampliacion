@page
@model Web.Pages.Vehiculos.IndexModel
@{
}
<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">SC-701: Programación Web Avanzada</div>
        <div class="masthead-heading text-uppercase">Listado de vehiculos</div>
    </div>
</header>

<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Listado de vehiculos</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <a type="button" class="btn btn-primary" asp-page="./Agregar"><i class="bi bi-plus-square"></i> Agregar</a>
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelo => modelo.vehiculos[0].Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(modelo => modelo.vehiculos[0].Modelo)
                    </th>
  
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @if(Model.vehiculos != null)
                @foreach (var vehiculo in Model.vehiculos)
                {
                    <tr class="align-middle">
                        <td>
                            <i class="bi bi-car-front-fill"></i>
                        </td>
                        <td>
                            @Html.DisplayFor(modelo => vehiculo.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelo => vehiculo.Modelo)
                        </td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-page="./Detalle" asp-route-id="@vehiculo.Id"><i class="bi bi-info-square"></i> </a>
                            <a type="button" class="btn btn-warning" asp-page="./Editar" asp-route-id="@vehiculo.Id"><i class="bi bi-pencil-square"></i> </a>
                            <a type="button" class="btn btn-danger" asp-page="./Eliminar" asp-route-id="@vehiculo.Id"><i class="bi bi-trash3-fill"></i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>