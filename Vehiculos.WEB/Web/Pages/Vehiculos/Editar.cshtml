@page
@model Web.Pages.Vehiculos.EditarModel
@{
}
<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">SC-701: Programación Web Avanzada</div>
        <div class="masthead-heading text-uppercase">Ejercicio vehiculo</div>
    </div>
</header>

<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Editar vehiculo</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>

        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto ">
            <form method="post">
               
                <div class="form-group">
                    <label class="control-label" asp-for="vehiculo.Marca"></label>
                    <input class="form-control disabled" asp-for="vehiculo.Marca" />
                    <span class="text-danger" asp-validation-for="vehiculo.Marca"></span>
                </div>
                <div class="form-group ">
                    <label class="control-label" asp-for="vehiculo.Modelo"></label>
                    <input class="form-control disabled" asp-for="vehiculo.Modelo" />
                    <span class="text-danger" asp-validation-for="vehiculo.Modelo"></span>
                </div>
                
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <a class="btn btn-primary" asp-page="./Index">Regresar</a>
                    <input type="submit" value="Editar" class="btn btn-warning" />
                </div>
                <input type="hidden" asp-for="vehiculo.Id" />
            </form>
            </div>
        </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
